<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grass" >

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimaryDark"
        android:drawableLeft="@drawable/timer"
        android:drawablePadding="2dp"
        />

    <LinearLayout
        android:id="@+id/score_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <EditText
                android:id="@+id/team_a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chronometer2"
                android:hint="Team A"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:text="0"
                android:textSize="36sp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:onClick="scoreTeamA"
                android:text="Goal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="shotTeamA"
                    android:text="Shot" />

                <TextView
                    android:id="@+id/team_a_shot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="shotOnGoalTeamA"
                    android:text="Shot on goal" />

                <TextView
                    android:id="@+id/team_a_shot_on_goal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="foulTeamA"
                    android:text="Foul" />

                <TextView
                    android:id="@+id/team_a_foul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="yellowCardTeamA"
                    android:text="Yellow Card" />

                <TextView
                    android:id="@+id/team_a_yellow_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="redCardTeamA"
                    android:text="Red Card" />

                <TextView
                    android:id="@+id/team_a_red_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <EditText
                android:id="@+id/team_b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Team B"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:text="0"
                android:textSize="36sp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:onClick="scoreTeamB"
                android:text="Goal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/team_b_shot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="shotTeamB"
                    android:text="Shot" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/team_b_shot_on_goal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="shotOnGoalTeamB"
                    android:text="Shot on goal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/team_b_foul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="foulTeamB"
                    android:text="Foul" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/team_b_yellow_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="yellowCardTeamB"
                    android:text="Yellow Card"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/team_b_red_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:onClick="redCardTeamB"
                    android:text="Red Card" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:onClick="resetScore"
            android:text="Reset" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:onClick="startMatch"
            android:text="Start" />
    </LinearLayout>

</RelativeLayout>